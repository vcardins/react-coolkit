{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@libs/components": [
        "libs/components/src/index.ts"
      ],
      "@react-coolkit/api": [
        "packages/react-coolkit-api/src/index.ts"
      ],
      "@react-coolkit/auth": [
        "packages/react-coolkit-auth/src/index.ts"
      ],
      "@react-coolkit/core": [
        "packages/react-coolkit-core/src/index.ts"
      ],
      "@react-coolkit/layouts": [
        "packages/react-coolkit-layouts/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2018",
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "./typings/mapbox.d.ts",
      "./typings/global.d.ts",
      "./typings/emotion.d.ts",
      "./typings/react-jsonschema-form.d.ts"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "temp",
    "dist",
    "./typings/*.d.ts"
  ]
}
